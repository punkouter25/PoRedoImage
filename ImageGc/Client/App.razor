﻿@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication // Keep this one

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @{
                        // Original logic for anonymous access
                        var pagePath = routeData.PageType.Name;
                        if (pagePath == "Home" || pagePath == "Diag") // Keep Diag check for now, though link is removed
                        {
                            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                        }
                        else
                        {
                            <p>You are not authorized to access this resource.</p>
                            <a href="authentication/login">Log in</a>
                        }
                    }
                </NotAuthorized>
                <Authorizing>
                    <p>Authentication in progress...</p> @* Original message *@
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

